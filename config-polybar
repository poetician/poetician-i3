set $ws11 "11"
assign [class="Atom|Nemo|Thunar|mpv"] $ws11
for_window [class="Atom|Nemo|Thunar"]focus
for_window [class="Nemo-terminal-prefs|mpv"]focus, floating enable, resize set 1280 854, move position center
